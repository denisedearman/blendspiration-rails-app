<div class="container-fluid">
  <h1><%= @recipe.name %></h1>

  <h2>Ingredients</h2>
  <ul>
    <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
      <li><%= recipe_ingredient.quantity %> <%= recipe_ingredient.unit unless recipe_ingredient.unit == "unit"%> <%= recipe_ingredient.ingredient.name %></li>
    <% end %>
  </ul>

  <h2>Directions</h2>
  <p><%=@recipe.description%></p>

  <% if current_user == @recipe.user %>
    <button class="btn btn-success"><%=link_to "Edit Recipe", edit_recipe_path(@recipe) %></button>
  <% end %>
</div>
